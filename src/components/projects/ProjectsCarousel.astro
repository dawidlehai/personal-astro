---
import type { LanguageSelectionType } from "../../utils/types";
import type { Project } from "../../data/projects";
import SingleProject from "./SingleProject.astro";
import { ArrowCircleRight } from "phosphor-react";

interface Props {
  projects: Project[];
  language: LanguageSelectionType;
}

const { projects, language: lang } = Astro.props;
const isEn = lang === "en";
---

<script>
  const list = document.getElementById("projects-list") as HTMLDivElement;

  if (list) {
    list.style.cursor = "grab";

    let pos = {
      left: 0,
      x: 0,
      dx: 0,
    };

    const mouseMoveHandler = (event: MouseEvent) => {
      pos.dx = event.clientX - pos.x;
      list.scrollLeft = pos.left - pos.dx;

      list.style.scrollSnapType = "none";
      list.style.scrollBehavior = "auto";
    };

    const mouseUpHandler = () => {
      document.removeEventListener("mousemove", mouseMoveHandler);
      document.removeEventListener("mouseup", mouseUpHandler);

      list.style.cursor = "grab";
      list.style.removeProperty("user-select");
      list.style.scrollSnapType = "x mandatory";
      list.style.scrollBehavior = "smooth";

      if (pos.dx > 0) list.scrollLeft -= 100;
      if (pos.dx < 0) list.scrollLeft += 100;
    };

    list.addEventListener("mousedown", (event) => {
      list.style.cursor = "grabbing";
      list.style.userSelect = "none";

      pos = {
        left: list.scrollLeft,
        x: event.clientX,
        dx: 0,
      };

      document.addEventListener("mousemove", mouseMoveHandler);
      document.addEventListener("mouseup", mouseUpHandler);
    });
  }
</script>

<div class="projects-section mid-col">
  <ul class="list-container ignore-grid" id="projects-list">
    {
      projects.map((project, index) => {
        if (index < 5) return;
        return <SingleProject project={project} isEn={isEn} />;
      })
    }
    <li class="end">
      <article>
        <h3>
          <slot name="heading" />
        </h3>
        <p>
          <slot name="info" />
        </p>
        <a href="https://github.com/dawidlehai/" hreflang="en" class="goto">
          GitHub
          <ArrowCircleRight size="4rem" className="goto__icon" weight="fill" />
        </a>
      </article>
    </li>
  </ul>
  <div class="bar-cover"></div>
</div>

<style>
  .projects-section {
    position: relative;
    overflow: hidden;
  }

  .list-container {
    display: flex;
    gap: var(--space-48);
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    overflow-x: scroll;
    scroll-padding: 0 var(--side-padding);
    padding-bottom: var(--space-24);
    overscroll-behavior-x: contain;
  }

  .bar-cover {
    width: 100%;
    position: absolute;
    height: 20px;
    background: var(--a-full);
    bottom: 0;
  }

  .end {
    flex: 0 0 45rem;
    padding: var(--space-32);
    color: var(--white-a);
    align-self: center;
  }
  .end article {
    display: grid;
    grid-template-columns: 1fr;
  }
  .end h3 {
    font-size: var(--font-4);
    display: flex;
    flex-direction: column;
    letter-spacing: var(--letter-spacing-2);
    margin-bottom: var(--space-32);
  }
  .end p {
    color: var(--font-dark);
  }
  .goto:where(:link, :visited) {
    display: flex;
    align-items: center;
    gap: var(--space-8);
    font-size: var(--font-large);
    font-weight: 800;
    text-transform: uppercase;
    color: var(--white-a);
    justify-self: end;
  }
</style>

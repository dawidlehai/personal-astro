---
import type { Language, Project } from "../../utils/types";
import LargeProject from "./LargeProject.astro";

interface Props {
  projects: Project[];
  language: Language;
}

const { projects, language: lang } = Astro.props;
const isEn = lang === "en";
---

<ul class="section-container mid-col">
  {projects.map((project) => <LargeProject project={project} isEn={isEn} />)}
</ul>

<style>
  .section-container {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    padding: 0 var(--side-padding);
    gap: var(--space-64);
  }
</style>

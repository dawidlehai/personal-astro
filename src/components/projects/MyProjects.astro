---
import type { Language, Project } from "../../utils/types";
import LargeProject from "./LargeProject.astro";
import MediumProject from "./MediumProject.astro";

interface Props {
  projects: Project[];
  language: Language;
}

const { projects, language: lang } = Astro.props;
const isEn = lang === "en";
---

<ul class="section-container mid-col">
  {
    projects.map((project, index) => {
      if (index > 1) return;
      return <LargeProject project={project} isEn={isEn} />;
    })
  }
  {
    projects.map((project, index) => {
      if (index < 2 || index > 4) return;
      return <MediumProject project={project} isEn={isEn} />;
    })
  }
</ul>

<style>
  .section-container {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    padding: 0 var(--side-padding);
    column-gap: var(--space-64);
    row-gap: var(--space-128);
  }
</style>

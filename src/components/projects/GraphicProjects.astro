---
import type { LanguageSelectionType } from "@utils/types";
import FontGrid from "./FontGrid.astro";

interface Props {
  lang: LanguageSelectionType;
}

const { lang } = Astro.props;

const isEn = lang === "en";
---

<section class="mid-col">
  <div class="desc ignore-grid">
    <hgroup class="header">
      <p class="subheading">
        <slot name="subheading" />
      </p>
      <h3 class="heading">
        <slot name="heading" />
      </h3>
    </hgroup>
    <div class="text">
      <slot name="text" />
    </div>
  </div>
  <figure class="big-img-container ignore-grid">
    <img src="/img/poster.png" class="big-img" />
    <figcaption class="big-cap">
      {
        !isEn &&
          "Fragment plakatu zachęcającego do udziału w badaniach naukowych. We współpracy z ilustratorką Magdaleną Ostasz."
      }
      {
        isEn &&
          "Part of a poster encouraging participation in scientific research. In collaboration with illustrator Magdalena Ostasz."
      }
    </figcaption>
  </figure>
  <figure class="small-img-container">
    <figcaption class="small-cap">
      {
        !isEn &&
          "Logotyp dla Studenckiego Koła Neuronauk i Psychologii Poznawczej działającego przy Wydziale Psychologii Uniwersytetu Kazimierza Wielkiego."
      }
      {
        isEn &&
          "Logotype for the Student Science Club of Neurosciences and Cognitive Psychology operating at the Faculty of Psychology of Kazimierz Wielki University."
      }
    </figcaption>
    <img src="/img/sknipp.png" class="small-img" />
  </figure>
  <figure class="medium-img-container ignore-grid">
    <img src="/img/tim-lider.png" class="medium-img" />
    <figcaption class="medium-cap">
      {
        !isEn &&
          "Ilustracja urodzinowa dla mojego przyjaciela w motywie League of Legends. We współpracy z Magdaleną Ostasz."
      }
      {
        isEn &&
          "Birthday illustration for my friend in the theme of League of Legends. In collaboration with Magdalena Ostasz."
      }
    </figcaption>
  </figure>
  <figure class="font-fig ignore-grid">
    <div class="font-container">
      <FontGrid />
      <!-- <div class="font-subheading">An awesome yet strange font</div> -->
    </div>
    <figcaption class="font-cap">
      <h4>Mason Font</h4>
      <p>
        <span>Nietuzinkowy</span>
        <span>Niesamowity</span>
        <span>Kosmiczny</span>
        <span>Ciekawy</span>
        <span>Dziwny</span>
      </p>
    </figcaption>
  </figure>
</section>

<style>
  section {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
  }

  .desc {
    color: var(--white-a);
  }

  .header {
    grid-column: 1 / 4;
    padding: 0 var(--side-padding);
  }

  .subheading {
    font-size: var(--font-normal);
    font-weight: 600;
    color: var(--b-full);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-very-loose);
  }

  .heading {
    letter-spacing: var(--letter-spacing-1);
    margin-bottom: var(--space-32);
  }

  .text {
    grid-column: 1 / 3;
    color: var(--font-dark);
    padding: 0 var(--side-padding);
  }

  .big-img {
    width: 100%;
    grid-column: 4 / 7;
    grid-row: 1 / 5;
    align-self: end;
    padding-left: var(--space-32);
  }
  .big-cap {
    align-self: center;
    position: relative;
    padding-bottom: var(--space-8);
  }
  .big-cap::after {
    content: "";
    position: absolute;
    width: 200%;
    bottom: 0;
    left: 0;
    height: 1px;
    background: var(--white-a);
    z-index: -1;
  }

  .medium-img {
    width: 100%;
    border-radius: var(--radius-default);
    margin: var(--space-32);
    margin-right: 4.5rem;
    grid-column: 2 / 4;
    grid-row: 3 / 5;
  }
  .medium-cap {
    grid-column: 1 / 2;
    grid-row: 3 / 4;
    margin-left: var(--side-padding);
    padding-bottom: var(--space-8);
    align-self: start;
    position: relative;
    margin-top: var(--space-32);
  }
  .medium-cap::after {
    content: "";
    position: absolute;
    width: 200%;
    bottom: 0;
    left: 0;
    height: 1px;
    background: var(--white-a);
    z-index: -1;
  }

  .small-img-container {
    grid-column: 1 / 2;
    grid-row: 4 / 5;
    margin: var(--side-padding);
    margin-right: 0;
    margin-bottom: var(--space-32);
    align-self: end;
  }
  .small-img {
    width: 100%;
    border-radius: var(--radius-default);
  }

  figcaption {
    color: var(--white-a);
    font-size: var(--font-xs);
  }

  .small-cap {
    color: var(--white-a);
    margin-bottom: var(--space-8);
  }

  .font-container {
    grid-column: 1 / 5;
    margin: var(--side-padding);
  }

  .font-cap {
    grid-column: 5 / 7;
    margin: var(--side-padding);
    font-weight: 400;
  }

  .font-cap h4 {
    font-family: "Mason", var(--font-sans);
    font-size: 11rem;
    font-weight: 400;
    text-transform: lowercase;
    line-height: 0.75;
    margin-bottom: var(--space-32);
  }

  .font-cap p {
    font-family: "Mason", var(--font-sans);
    font-size: 8rem;
    font-weight: 400;
    text-transform: lowercase;
    line-height: 0.75;
  }
  .font-cap p span {
    display: block;
  }
  .font-cap p span:nth-of-type(1) {
    color: hsl(var(--a) 95%);
  }
  .font-cap p span:nth-of-type(2) {
    color: hsl(var(--a) 90%);
  }
  .font-cap p span:nth-of-type(3) {
    color: hsl(var(--a) 85%);
  }
  .font-cap p span:nth-of-type(4) {
    color: hsl(var(--a) 80%);
  }
  .font-cap p span:nth-of-type(5) {
    color: hsl(var(--a) 75%);
  }
</style>

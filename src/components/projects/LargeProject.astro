---
import type { Project } from "../../utils/types";

interface Props {
  project: Project;
}

const { title, subtitle, image, technologies } = Astro.props.project;
---

<li class="project">
  <hgroup>
    <h4>{title}</h4>
    <p>{subtitle}</p>
  </hgroup>
  <div class="project__figure">
    <div class="tablet">
      <div class="tablet__screen">
        <img src={image.full} class="project__img" />
      </div>
    </div>
    <ul class="tech">
      {
        technologies.map((tech) => (
          <li>
            <tech.icon size="var(--icon-size)" className="tech__icon" />
            {tech.name}
          </li>
        ))
      }
    </ul>
    <div class="phone">
      <div class="phone__speaker"></div>
      <div class="phone__screen">
        <img src={image.mobile} class="project__img-mobile" />
      </div>
      <div class="phone__button"></div>
    </div>
  </div>
</li>

<style>
  .project {
    grid-column: span 6;
    display: grid;
    grid-template-columns: 1fr;
  }

  .project hgroup p {
    margin-bottom: var(--space-16);
    font-style: italic;
  }

  .project__figure {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    grid-template-rows: min-content 1fr;
    --bg-color: var(--gray-14);
  }

  .phone {
    grid-column: 6 / 8;
    grid-row: 1 / 3;
    align-self: start;

    background-color: var(--gray-15);

    --border: var(--space-8);
    border: 1px solid var(--gray-11);
    border-right: 4px solid var(--gray-11);
    border-bottom: 4px solid var(--gray-11);
    border-radius: var(--radius-xxl);
    padding: var(--border);
    margin-top: var(--space-64);
  }

  .phone__screen {
    overflow: hidden;
    border-radius: calc(var(--radius-xxl) - var(--border));
  }

  .project__img-mobile {
    width: 100%;
  }

  .tablet__screen {
    border-radius: var(--radius-default);
    overflow: hidden;
  }

  .tablet {
    grid-column: 1 / 7;
    grid-row: 1 / 2;
    background-color: var(--bg-color);
    border-radius: var(--radius-xxl);
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }

  .project__img {
    width: 100%;
  }

  .tech {
    --icon-size: 2.5ex;
    align-self: start;
    grid-column: 1 / 6;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: var(--space-16);
    padding: var(--space-32);
    background-color: var(--bg-color);
    border-bottom-left-radius: var(--radius-default);
  }

  .tech li {
    border-radius: var(--radius-small);
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-8);
  }

  .tech__icon {
    color: currentColor;
  }
</style>

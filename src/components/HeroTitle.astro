---
import { ArrowFatDown } from "phosphor-react";

interface Props {
  linkUrl: string;
  linkText: string;
  children: any;
}

const { linkUrl: url, linkText: text } = Astro.props;
---

<div class="title">
  <hgroup class="ignore-grid">
    <p>Cz≈Çowiek wielu pasji</p>
    <h1><span>Dawid</span><span><span class="le">Le</span> Hai</span></h1>
  </hgroup>
  <p>
    <slot />
  </p>
  <a href={url} class="button">
    <span class="button__text">{text}</span>
    <span class="button__icon-container">
      <span class="button__icon-fill">
        <ArrowFatDown
          weight="fill"
          className="button__icon"
          size="var(--icon-size)"
        />
      </span>
    </span>
  </a>
</div>

<style>
  .title {
    display: flex;
    align-items: end;
    flex-direction: column;
    color: var(--c6);
    --text-color: var(--gray-2);
  }

  .title h1 {
    position: relative;
    margin-bottom: var(--space-8);
    font-size: 18.3rem;
    font-family: "Anton", "Poppins", sans-serif;
    text-transform: uppercase;
    display: grid;
    justify-items: end;
    line-height: 1;
    grid-template-columns: 1fr;
  }

  .title h1 > span:last-child {
    font-size: 1.53ex;
    display: flex;
    align-items: start;
    gap: 0.15ex;
    color: var(--c3);
  }

  .title hgroup p {
    text-transform: uppercase;
    font-size: var(--font-small);
    font-weight: 600;
    letter-spacing: 0.8rem;
    color: var(--c4);
    margin-bottom: var(--space-48);
  }

  .title > p {
    font-size: var(--font-6);
    max-width: 40ch;
    text-align: right;
    margin-bottom: var(--space-48);
    margin-top: var(--space-32);
    color: var(--c4);
    font-weight: 500;
  }

  .button {
    background-color: var(--white-a);
    color: hsl(var(--a) 63%);
    font-size: var(--font-base);
  }
</style>

---
import type { Tech } from "../../utils/technologies.astro";

export type SkillLevelType = "advanced" | "good" | "basic" | "other";

interface Props {
  tech: Tech;
  type: SkillLevelType;
}

const { tech, type } = Astro.props;
---

<li class={`skill skill--${type}`}>
  <figure class="skill__figure">
    <div class="skill__icon-container">
      <tech.icon className="skill__icon" size="100%" title={tech.name} />
    </div>
    <figcaption class="skill__name">
      {tech.name}
    </figcaption>
  </figure>
</li>

<style define:vars={{ "icon-color": tech.color, "icon-bg": tech.bg }}>
  .skill {
    padding: var(--space-4);
    border-radius: calc(var(--radius-default) + var(--space-4));
    position: relative;
  }
  .skill--advanced {
    background: var(--white-a);
  }
  .skill--good {
    background: var(--b-full);
  }
  .skill--basic,
  .skill--other {
    background: var(--a-darker);
  }

  .skill__figure {
    --radius: var(--radius-default);
    --gap: var(--space-12);

    display: grid;
    border-radius: var(--radius);
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
    gap: var(--gap);
  }

  .skill__icon-container {
    background-color: var(--a-darker);
    display: grid;
    place-content: center;
    padding: 25%;
    border-radius: var(--radius);
    transition: background-color 0.5s;
  }
  .skill:hover .skill__icon-container {
    background-color: var(--icon-bg);
  }

  .skill__icon {
    color: var(--white-a);
    transition: color 0.5s;
  }
  .skill:hover .skill__icon {
    color: var(--icon-color);
  }

  .skill__name {
    font-size: var(--font-small);
    font-weight: 500;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    text-align: center;
    background: green;
    padding: var(--space-8) 0;
    border-top-left-radius: calc(var(--radius-default) + var(--space-4));
    border-top-right-radius: calc(var(--radius-default) + var(--space-4));
    transform: translateY(-100%);
  }
</style>

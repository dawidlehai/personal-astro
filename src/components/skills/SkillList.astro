---
import type { Tech } from "../../utils/technologies.astro";
import type { SizeType } from "../../utils/types";
import Skill from "./Skill.astro";

interface Props {
  skills: Tech[];
  gridRow: string;
  bg: string;
  size?: SizeType;
}

const { skills, gridRow, bg, size = "medium" } = Astro.props;
---

<section class={`skills skills--${size} ignore-grid`}>
  <h3 class="skills__heading">
    <slot />
  </h3>

  <ul class="skills__list">
    {skills.map((skill) => <Skill tech={skill} size={size} />)}
  </ul>

  <div class="skills__bg"></div>
</section>

<style define:vars={{ gridRow, bg }}>
  .skills {
    --padding: var(--space-64);
  }

  .skills__list {
    grid-column: 2 / 3;
    grid-row: var(--gridRow);
    display: flex;
    align-items: start;
    gap: var(--space-32);
    padding: var(--padding) 0;
  }
  .skills--medium .skills__list {
    gap: var(--space-24);
  }
  .skills--small .skills__list {
    gap: var(--space-16);
  }

  .skills__heading {
    grid-column: 1 / 2;
    grid-row: var(--gridRow);
    display: grid;
    grid-template-columns: min-content;
    align-self: center;
    font-size: var(--font-5);
    letter-spacing: 0;
    padding: var(--padding) 0;
  }

  .skills__bg {
    grid-column: 1 / 3;
    grid-row: var(--gridRow);
    background: linear-gradient(to right, transparent, var(--bg), transparent);
    z-index: -1;
  }
</style>

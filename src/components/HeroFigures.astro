---
import type { Caption } from "../utils/types";
import { Picture } from "@astrojs/image/components";

interface Props {
  captions: Caption[];
}

const { captions } = Astro.props;
---

<div class="figures">
  {
    captions.map((caption) => (
      <figure class="ignore-grid">
        <figcaption>
          <p>{caption.subtitle}</p>
          <h3>{caption.title}</h3>
        </figcaption>
        <div class="figure-image-container">
          <div class="figure-image">
            <Picture
              src={`/img/figures/${caption.img.filename}`}
              alt={caption.img.alt}
              sizes="222px"
              widths={[666, 444, 222]}
              formats={["webp"]}
              aspectRatio="300:1191"
              fetchpriority="high"
              loading="eager"
              decoding="sync"
            />
          </div>
        </div>
      </figure>
    ))
  }
</div>

<style>
  .figures {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: min-content 1fr;
    gap: var(--space-32);
    align-items: start;
  }

  figure:nth-child(1) :is(.figure-image-container, .filler) {
    grid-column: 1 / 2;
    background: var(--c5);
  }
  figure:nth-child(2) :is(.figure-image-container, .filler) {
    grid-column: 2 / 3;
    background: var(--c4);
  }
  figure:nth-child(3) :is(.figure-image-container, .filler) {
    grid-column: 3 / 4;
    background: var(--c6);
  }
  figure:nth-child(4) :is(.figure-image-container, .filler) {
    grid-column: 4 / 5;
    background: var(--c3);
  }

  figcaption {
    align-self: end;
  }

  figcaption h3 {
    font-size: var(--font-5);
    font-weight: 700;
    color: var(--c3dark);
    letter-spacing: var(--letter-spacing-3);
    line-height: var(--line-tight);
    display: grid;
  }

  figcaption p {
    font-size: var(--font-small);
    text-transform: uppercase;
    color: var(--c3dark);
    font-weight: 500;
    margin: 0;
  }

  .figure-image-container {
    grid-row: 2 / 3;
    width: 100%;
    display: grid;
    align-self: stretch;
    border-radius: var(--radius-default);
    overflow: hidden;
  }

  .figure-image {
    width: 100%;
    color: transparent;
    position: relative;
  }

  .figure-image img {
    height: 60rem;
    width: 100%;
    object-fit: cover;
    object-position: top;
    aspect-ratio: 300 / 1191;
  }
</style>

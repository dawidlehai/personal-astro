---
import type { LanguageSelectionType } from "@utils/types";
import { Star } from "phosphor-react";
import EducationAwardItem from "./EducationAwardItem.astro";

interface Props {
  lang: LanguageSelectionType;
}

const { lang } = Astro.props;

export interface AwardType {
  title: string;
  year: string;
  desc: string;
}

const awards: { pl: AwardType[]; en: AwardType[] } = {
  pl: [
    {
      title: "Najlepszy absolwent Uniwersytetu",
      year: "2021/2022",
      desc: "Nagroda Rektora Uniwersytetu Kazimierza Wielkiego dla Najlepszego Absolwenta roku akademickiego 2021/2022 za działalność pozanaukową.",
    },
    {
      title: "Najlepszy absolwent i student Kolegium II",
      year: "2021/2022",
      desc: "Wyróżnienie Rady Kolegium II UKW dla najlepszego absolwenta i studenta roku akademickiego 2021/2022 za bardzo dobre wyniki w nauce i działalność pozanaukową.",
    },
    {
      title: "Najlepsza praca magisterska",
      year: "2021/2022",
      desc: "Wyróżnienie Rady Kolegium II Uniwersytetu Kazimierza Wielkiego za najlepszą pracę magisterską na kierunku psychologia w roku akademickim 2021/2022.",
    },
    {
      title: "Stypendium za osiągnięcia naukowe",
      year: "2018/2022",
      desc: "Stypendium Rektora Uniwersytetu Kazimierza Wielkiego za osiągnięcia naukowe. Stypendium otrzymywałem przez 4 lata od 2018 roku.",
    },
  ],
  en: [
    {
      title: "Najlepszy absolwent",
      year: "2021/2022",
      desc: "Nagroda Rektora Uniwersytetu Kazimierza Wielkiego dla Najlepszego Absolwenta roku akademickiego 2021/2022 za działalność pozanaukową.",
    },
    {
      title: "Najlepszy absolwent i student",
      year: "2021/2022",
      desc: "Wyróżnienie Rady Kolegium II UKW dla najlepszego absolwenta i studenta roku akademickiego 2021/2022 za bardzo dobre wyniki w nauce i działalność pozanaukową.",
    },
    {
      title: "Najlepsza praca magisterska",
      year: "2021/2022",
      desc: "Wyróżnienie Rady Kolegium II UKW za najlepszą pracę magisterską na kierunku psychologia w roku akademickim 2021/2022.",
    },
  ],
};
---

<section class="section mid-col">
  <hgroup class="header">
    <!-- <div class="header__icon-container">
      <Trophy weight="duotone" size="100%" className="header__icon" />
    </div> -->
    <div class="icon-container">
      <Star weight="duotone" size="100%" className="icon" />
    </div>
    <h3 class="heading">Nagrody i&nbsp;wyróżnienia</h3>
  </hgroup>

  <ul class="list">
    {
      awards[lang].map((award, index) => (
        <EducationAwardItem award={award} index={index} />
      ))
    }
  </ul>
</section>

<style>
  .section {
    margin-top: var(--space-192);
    display: grid;
    padding: 0 var(--side-padding);
    grid-template-columns: repeat(4, 1fr);
  }

  .header {
    display: flex;
    align-items: center;
    color: var(--white-a);
    grid-column: span 4;
    margin-bottom: var(--space-80);
    gap: var(--space-24);
  }

  /* .header__icon-container {
    max-width: 9.6rem;
    padding: var(--space-16);
    background: var(--a-darker);
    border-radius: var(--radius-default);
    aspect-ratio: 1 / 1;
  } */

  .heading {
    font-size: var(--font-4);
  }

  .list {
    grid-column: span 4;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-32);
  }

  .icon-container {
    padding: var(--space-12);
    width: 7rem;
    line-height: 1;
    aspect-ratio: 1 / 1;
    background: var(--a-darker);
    border-radius: var(--radius-small);
  }
</style>

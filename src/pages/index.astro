---
import Layout from "../layouts/Layout.astro";

const birthDate = +new Date(import.meta.env.BIRTH_DATE);
const currentDate = +new Date();

const ageInMilliseconds = currentDate - birthDate;
const ageInYears = Math.trunc(ageInMilliseconds / 1000 / 60 / 60 / 24 / 365);
---

<Layout
  language="pl"
  title="Dawid Le Hai – Programista frontendu"
  description={`${ageInYears}-letni programista frontendu, psycholog, certyfikowany trener personalny, a także entuzjasta tworzenia muzyki.`}>
  Hello!
</Layout>

